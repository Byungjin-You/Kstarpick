# 로컬 개발 환경 설정
# 이 파일을 복사하여 .env.local 파일을 만드세요
# cp .env.local.example .env.local

# MongoDB 연결 설정 (로컬 개발용)
# 옵션 1: 로컬 MongoDB
MONGODB_URI=mongodb://localhost:27017/kstarpick_dev
# 옵션 2: MongoDB Atlas (무료 클러스터)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kstarpick_dev?retryWrites=true&w=majority
# 옵션 3: Docker MongoDB
# MONGODB_URI=mongodb://localhost:27017/kstarpick_dev

MONGODB_DB=kstarpick_dev

# NextAuth 설정 (로컬용)
NEXTAUTH_SECRET=local_dev_secret_key_change_in_production
NEXTAUTH_URL=http://localhost:3000

# Admin Registration Key (로컬 테스트용)
ADMIN_KEY=local_admin_key_for_testing

# JWT 비밀키 (로컬 개발용)
JWT_SECRET=local_jwt_secret_key_for_testing

# YouTube API 설정
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY_HERE

# 기타 설정
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Analytics 설정 (로컬에서는 비활성화 권장)
# NEXT_PUBLIC_GA_ID=

# 개발 환경 플래그
NODE_ENV=development
IS_LOCAL_DEV=true